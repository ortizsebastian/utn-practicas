#include <iostream>
using namespace std;

int main()
{
    int d, m, a, d2, m2, a2, x;

    cout << "Ingrese fecha de nacimiento" << endl;
    cout << "En el siguiente formato D/MM/AAAA: " << endl;
    cin >> d;
    cin >> m;
    cin >> a;
    cout << "Ingrese fecha actual" << endl;
    cout << "En el siguiente formato D/MM/AAAA: " << endl;
    cin >> d2;
    cin >> m2;
    cin >> a2;


    x = a2 - a;

    if(m >= m2 && d >= d2)
    {
        x -= 1;
    }

    cout << "Usted tiene " << x  << endl;


    return 0;
}
